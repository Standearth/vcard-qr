{
  "name": "vcard-qr-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "server",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter frontend dev & pnpm dev:server",
    "dev:server": "nodemon",
    "build": "pnpm -r build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc -b --verbose"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "eslint": "^9.32.0",
    "globals": "^15.8.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.39.0"
  }
}
