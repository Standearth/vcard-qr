{
  "name": "vcard-qr-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "server",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w frontend & npm run dev -w server",
    "build": "npm run build -w server && npm run build -w frontend",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "npx tsc --noEmit"
  },
  "devDependencies": {
    "eslint": "^9.32.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  }
}
