{
  "name": "vcard-qr-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "server",
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:server": "pnpm --filter server dev",
    "dev": "pnpm dev:frontend & pnpm dev:server",
    "build": "pnpm run -r --workspace-concurrency=1 build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc -b --verbose"
  },
  "devDependencies": {
    "eslint": "^9.32.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  }
}
